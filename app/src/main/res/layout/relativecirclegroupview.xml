<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp" android:layout_height="250dp"
    android:id="@+id/container"
    >

    <meow.thaithien.threecicle.CircularView
        android:src="@drawable/blue100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:id="@+id/mid_circle"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <meow.thaithien.threecicle.CircularView
        android:src="@drawable/red100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:id="@+id/bot_circle"
        android:layout_below="@+id/mid_circle"
        android:layout_toLeftOf="@+id/mid_circle"
        android:layout_toStartOf="@+id/mid_circle"
        android:layout_marginRight="@dimen/margin_threecircle"
        android:layout_marginTop="@dimen/margin_threecircle"
        />

    <meow.thaithien.threecicle.CircularView
        android:src="@drawable/green100"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:id="@+id/top_circle"
        android:layout_above="@+id/mid_circle"
        android:layout_toLeftOf="@+id/mid_circle"
        android:layout_toStartOf="@+id/mid_circle"
        android:layout_marginRight="@dimen/margin_threecircle"
        android:layout_marginBottom="@dimen/margin_threecircle"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="180dp"
    android:layout_height="180dp">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mid_circle_container"
        android:layout_gravity="right|center_vertical" >
        <meow.thaithien.threecicle.CircularView
            android:src="@drawable/blue100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mid_circle"
            android:background="@null"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/top_circle_container"
        android:layout_gravity="center_horizontal|top" >
        <meow.thaithien.threecicle.CircularView
            android:src="@drawable/green100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_circle"
            android:background="@null"
            android:layout_gravity="center" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/bot_circle_container"
        android:layout_gravity="center_horizontal|bottom" >
        <meow.thaithien.threecicle.CircularView
            android:src="@drawable/red100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bot_circle"
            android:background="@null"
            android:layout_gravity="center"/>
    </FrameLayout>

</FrameLayout>